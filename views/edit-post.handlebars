<article class="w-50 mx-auto">
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input class="form-control my-1" name="post-title" type="text" value="{{post.title}}" />
      <input class="form-control my-1" name="post-text" type="text" value="{{post.post_text}}"></input>
    </div>
    <div>
      {{format_date post.created_at}}
      |
      <a class="text-secondary" href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn border my-2">Save post</button>
    <button type="button" class="btn border my-2 delete-post-btn">Delete post</button>
  </form>
</article>

<form class="w-50 mx-auto">
  <div>
    <textarea class="form-control" name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="btn border my-2">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>